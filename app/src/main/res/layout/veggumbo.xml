<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kyle.qookbook.MainActivity"
    android:background="@drawable/rou"
    >
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:text="Recipe:Vegetable Gumbo"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:text="http://www.foodnetwork.com/recipes/food-network-kitchens/vegetable-gumbo-recipe.html"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="Rating: 4.5/5"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/darker_gray"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:src="@drawable/veggumbo"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:text="Ingredients:\n3 tablespoons vegetable oil\n\n3 tablespoons all-purpose flour\n\n1 small onion, chopped\n\n1 green bell pepper, chopped\n\n2 stalks celery, chopped\n\n3 cloves garlic, chopped\n\nKosher salt and freshly ground pepper\n\n1 tablespoon soy sauce or Worcestershire sauce\n\n1 teaspoon smoked paprika (preferably hot)\n\n2 cups low-sodium vegetable broth\n\n1 pound kale or Swiss chard, stemmed and chopped\n\n1 10 -ounce package frozen black-eyed peas\n\nBrown rice, for serving (optional)"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:text="Directions:\nHeat the vegetable oil in a large pot over medium-high heat. Add the flour and cook, stirring, until golden, about 3 minutes. Add the onion, bell pepper, celery, garlic, 3 tablespoons water and 1/4 teaspoon each salt and pepper. Reduce the heat to medium, cover and cook, stirring occasionally, until the vegetables soften, about 8 minutes.\n\nAdd the soy sauce and paprika and cook, stirring, 30 seconds. Stir in the vegetable broth, scraping up any browned bits from the bottom of the pot, then cover and bring to a boil.\n\nAdd the greens and black-eyed peas to the pot. Reduce the heat, cover and simmer, stirring occasionally, until tender, about 15 minutes. Season with salt and pepper. Serve with the rice, if desired."
                />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>